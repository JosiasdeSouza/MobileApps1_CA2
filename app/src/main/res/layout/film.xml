<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@color/teal_200">


    <ImageView
        android:id="@+id/uci_image"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ucicinemas"
        app:layout_constraintBottom_toTopOf="@+id/film_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo__"
        tools:ignore="ContentDescription,UnknownId" />

    <ImageButton
        android:id="@+id/film_image"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo_"
        android:src="@drawable/creed3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/film_title"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="112dp"
        android:text="@string/creed_iii_"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="@id/film_image"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
